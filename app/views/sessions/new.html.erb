<h1>Login</h1>

<%= form_tag '/login' do %>
	
	<% flash.each do |name, msg| %>
	      <%= content_tag :div, msg, class: name %>
	<% end %>
	
	First Name : <%= text_field_tag :first_name %>
	Last Name : <%= text_field_tag :last_name %>
	Email: <%= email_field_tag :email %>
	Password: <%= password_field_tag :password %>
	<%= submit_tag "Login" %>

<% end %>

